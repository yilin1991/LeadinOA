
@{
    ViewBag.Title = "万印名片行OA系统";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="tpl-content-wrapper">
    <div class="tpl-content-page-title">
        Amaze UI 表单
    </div>
    <ol class="am-breadcrumb">
        <li><a href="#" class="am-icon-home">首页</a></li>
        <li><a href="#">表单</a></li>
        <li class="am-active">Amaze UI 表单</li>
    </ol>
    <div class="tpl-portlet-components">
        <div class="portlet-title">
            <div class="caption font-green bold">
                <span class="am-icon-code"></span> 表单
            </div>
            <div class="tpl-portlet-input tpl-fz-ml">
                <div class="portlet-input input-small input-inline">
                    <div class="input-icon right">
                        <i class="am-icon-search"></i>
                        <input type="text" class="form-control form-control-solid" placeholder="搜索...">
                    </div>
                </div>
            </div>

        </div>
        <div class="tpl-block ">
            <div class="am-g tpl-amazeui-form">

                <div class="am-u-sm-12 am-u-md-9">


                    <form class="am-form am-form-horizontal">
                        <div class="am-form-group">
                            <label for="user-name" class="am-u-sm-3 am-form-label">类别名称</label>
                            <div class="am-u-sm-9">
                                <input type="text" id="user-name" placeholder="类别名称">
                                <small>输入类别名称。</small>
                            </div>
                        </div>
                        
                        <div class="am-form-group">
                            <label for="user-email" class="am-u-sm-3 am-form-label">类别副标题</label>
                            <div class="am-u-sm-9">
                                <input type="text" id="user-email" placeholder="类别副标题">
                               
                            </div>
                        </div>
                        <div class="am-form-group">
                            <label for="doc-select-1" class="am-u-sm-3 am-form-label">所属父类别</label>
                            <div class="am-u-sm-9">
                                <select id="doc-select-1">
                                    <option value="0">顶级类别</option>
                                    @foreach (var item in Model)
                                    {

                                    }
                                    <option value="option2">选项二.....</option>
                                    <option value="option3">选项三........</option>
                                </select>
                            </div>
                        </div>                    
                        <div class="am-form-group">
                            <label for="user-email" class="am-u-sm-3 am-form-label">链接地址</label>
                            <div class="am-u-sm-9">
                                <input type="text" id="user-email" placeholder="链接地址"> 
                            </div>
                        </div>
                        <div class="am-form-group">
                            <label for="user-QQ" class="am-u-sm-3 am-form-label">类别排序</label>
                            <div class="am-u-sm-9">
                                <input type="number" pattern="[0-9]*" id="user-QQ" value="10000" >
                                <small>请输入类别排序，数字越小越靠前</small>
                            </div>
                        </div>                     
                        <div class="am-form-group">
                            <label for="user-intro" class="am-u-sm-3 am-form-label">类别简介</label>
                            <div class="am-u-sm-9">
                                <textarea class="" rows="5" id="user-intro" placeholder="类别简介"></textarea>
                            </div>
                        </div>
                        <div class="am-form-group">
                            <label for="user-intro" class="am-u-sm-3 am-form-label">类别状态</label>
                            <div class="am-u-sm-9">
                                <label class="am-checkbox-inline">
                                    <input type="checkbox" value="option1" checked="checked"> 启用
                                </label>
                            </div>
                        </div>

                        <div class="am-form-group">
                            <div class="am-u-sm-9 am-u-sm-push-3">
                                <button type="button" class="am-btn am-btn-primary">保存修改</button>
                            </div>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>
</div>


